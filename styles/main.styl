// -- end of lfdemo

#leftbar
  padding-top:0
  border-right: 1px black solid

  >  :first-child
    background: url('img/lfdemo-logo2-white.jpg') no-repeat
    background-size: contain
    padding-top: 6.6em

#textbook
  font-weight: 300
  font-size: 18px
  background: white

  @media(max-width: 480px)
    font-size: 16px

  h1, h2, h3, h4, h5, p, blockquote
    padding: 0px 2rem

  ol, ul
    padding-right: 2rem

  p, li
    margin-top: .4em
    margin-bottom: .4em
    text-align: justify

  blockquote
    font-style: italic

  .small-text
    font-size: .8em
  .small
    font-size: 80% !important
  .box
    margin-bottom: 0.5em
    text-align: justify
    font-weight: normal
    position: relative
    text-shadow: 0 -1px rgba(0,0,0,0.3)
    font-size: 0.9em
    line-height: 1.5em
    background: #9bd4cc
    border: 1px solid #fff
    padding: 5px 15px
    border-radius: 0 10px 0 10px
    box-shadow: inset 0 0 5px rgba(53,86,129, 0.5)

  .history
    img
      width: 50%
      margin: 0 auto

  a.footnote
    cursor: pointer
    text-decoration: none
    border-bottom: 1px dashed black
    color: inherit
  .popover
    font-size: 0.8em !important

  textarea
    width: 100%
    border 1px solid #76b1c0 !important
    border-radius: 4px
    // padding: .5em
    resize: none

  .label
    text-transform: uppercase
    font-family: sans-serif
    padding: 8px 10px 5px 10px

  h1.subject
    // display: block
    position: absolute
    top: 0
    left: 1.6em
    background-color: red
    color: white
    padding: 0.3em 0.5em
    text-transform: uppercase
    font-size: 1em
    float: left

  .lfdemo-main-cover
    height: 100vh
    &.general
      background: url('img/8889827_orig.jpg') no-repeat
      background-size: cover
    &.divinity
      background: url('img/divinity/divinity-cover.jpg') no-repeat
      background-size: cover
    &.economics
      background: url('img/economics/economics-cover3.jpg') no-repeat
      background-size: cover
    &.history
      background: url('img/iranian_revolution.jpg') no-repeat
      background-size: cover
      background-position: center bottom
    &.mathematics
      background: url('img/mathematics/statistics-header.jpg') no-repeat
      background-size: cover

    .title-box
      // position: absolute;
      // top: 10%;
      padding-top: 5em;
      background: transparent;
      .lfdemo-title
        background: white;
        border-left: 5px #c0392b solid;
        padding: 1em;
        font-size: 1.7em;

  .lfdemo-header
    display: flex
    height: 30vh
    min-height: 120px
    align-items: center;
    justify-content: center;
    margin-left: auto;
    &.introduction
      background: url('img/divinity/divinity-cover.jpg') no-repeat
      background-size: cover
      background-position: left top
    &.hinduism
      background: url('img/divinity/hinduism-cover.jpg') no-repeat
      background-size: cover
      background-position: left center
    &.buddhism
      background: url('img/divinity/buddhism-cover.jpg') no-repeat
      background-size: cover
      background-position: left center
    &.judaism
      background: url('img/divinity/3370859327_ec58a80992_o.jpg') no-repeat
      background-size: cover
      background-position: center top
    &.christianity
      background: url('img/divinity/The_Incredulity_of_Saint_Thomas_by_Caravaggio.jpg') no-repeat
      background-size: cover
      background-position: center center
    &.islam
      background: url('img/divinity/islam-cover.jpg') no-repeat
      background-size: cover
      background-position: left center
    &.sikhism
      background: url('img/divinity/sikhism-cover.jpg') no-repeat
      background-size: cover
      background-position: center center
    &.inequality
      background: url('img/economics/inequality-header.jpg') no-repeat
      background-size: cover
      background-position: center center
    &.poverty
      background: url('img/economics/poverty-header.jpg') no-repeat
      background-size: cover
      background-position: center center
    &.history
      background: url('img/history/history-header.jpg') no-repeat
      background-size: cover
      background-position: center center
    &.statistics
      background: url('img/mathematics/statistics-header.jpg') no-repeat
      background-size: cover
      background-position: center center

    .title-box
      // position: absolute
      // top: 1em
      // right: 1em
      background: transparent
      &.economics, &.dark
        background: rgba(0,0,0,0.6)
      .title
        // background: white;
        color: white
        border-right: 5px #f39c12 solid;
        border-top: 1px white solid;
        border-left: 1px white solid;
        border-bottom: 1px white solid;
        padding: 1em;
        font-size: 1.7em;
        &.economics
          border-right: 5px #2980b9 solid;
        &.history
          border-right: 5px #16a085 solid;
        &.mathematics
          border-right: 5px #FFFF00 solid


  a.block
    display: block
    color: white
    background: black
    border-left: 5px #c0392b solid;
    padding: 0.3em 1.6em;
    font-size: 1.2em;
    margin-top: 0.2em;
    max-width: 20em;
    &:hover
      text-decoration: none
      // color: black
      background: white
    &.divinity
      border-left: 5px #f39c12 solid;
      &:hover
        background: #f39c12
    &.economics
      border-left: 5px #2980b9 solid;
      &:hover
        background: #2980b9
    &.history
      border-left: 5px #16a085 solid;
      &:hover
        background: #16a085
    &.mathematics
      border-left: 5px #FFFF00 solid
      &:hover
        background: #FFFF00
        color: black
  p.border
    margin: 0.2em 1em
    padding: 0.2em
    border: 1px rgba(0,0,0,0.2) solid
  table
    thead
      text-align: center
  ul, ol
    text-align: justify
    line-height: 1.3 em
    margin-top: .4em
    margin-bottom: .4em

// History Exercises

.history-01-table-1
  margin: 1rem 4rem;
  width: calc(100% - 10rem);
  float: none;
  margin: 2em auto;
  td
    text-align: center;

.history-01-sort-01
  text-align: center;

  .progress-box
    width: calc(100% - 4rem);
    margin: 20px 2rem

  .items
    display: inline-block;
    float: none;
    margin: 1em auto;

    .item
      display: inline-block;
      padding: 15px;
      margin-right: 12px;
      margin-top: 12px;
      font-size: 18px;
      font-family: "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif;
      font-weight: 100;
      line-height: 1.3333333;
      border-radius: 0 40% 40% 0;
      color: #fff;
      &.item-in-place
        background-color: #29B900;
      &.item-not-in-place
        background-color: #337AB7;


.connect-points.history-02-connect-1
  .choice
    width: 100%
    background-color: #5f9edf
    color: white
    margin-bottom: 1em
    padding: 0.3em 1em

  .choice.hover
    background-color: #5187bf // a bit darker

  div[data-group='arab'] .choice
    text-align: right

.history-02-sort-01,
.history-02-sort-02,
.history-02-sort-03
  .items
    .item
      display: block;
      color: white;
      background-color: #337AB7;
      margin: 10px;
      padding: 5px 10px;
      i
        opacity: 0.7;
        margin-right: 0.5em;

.history-02-sort-02
  .items
    .item
      background-color: #26567F;

