// Slide type pages

.lfdemo-slide-container
  width: 100% !important;
  padding: 0 !important;
  background: url('bg/4.png') !important;
  
.lfdemo-slide-contents
  display: flex;
  min-height: 100vh;
  justify-content: center;
  margin: 0 !important;
    
  > h1
    align-self: center;
    font-size: 400%
    text-align: center;
  .slide
    font-size: 250%
    align-self: center;
    text-align: center;
  .centered
    font-size: 150%
    align-self: center;
    text-align: center;
    

.lfdemo-slide-notes
  width:100%;
  padding: 1em 3em;
  margin: 10px auto !important;;
  border: 1px solid #bbb;
  background-color: #fff;
  
  >p
    margin: 1.5em 0 !important;
  
@media (min-width: 992px)
  .lfdemo-slide-notes
    width: 850px;

@media (min-width: 768px)
  .lfdemo-slide-notes
    width: 715px;

